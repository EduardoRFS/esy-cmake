{
  "name": "esy-cmake",
  "version": "0.1.0",
  "description": "CMake package for esy",
  "license": "MIT",
  "esy": {
    "build": [
        ["git", "submodule", "update", "--init"],
        ["{#os != 'windows' ? './cmake/bootstrap' : ':'}", "--prefix=#{self.install}"],
        ["{#os == 'windows' ? './cmake/bootstrap' : ':'}", "--prefix=#{self.install}", "CC=x86_64-w64-mingw32-gcc", "CFLAGS=-DKWSYS_ENCODING_DEFAULT_CODEPAGE=CP_UTF8", "CXX=x86_64-w64-mingw32-g++", "CXXFLAGS=-static -static-libgcc -static-libstdc++ --std=c++11 -DKWSYS_ENCODING_DEFAULT_CODEPAGE=CP_UTF8"],
        ["make", "-C", "cmake"],
        ["make", "-C", "cmake",  "install"]
    ],
    "buildsInSource": true
  },
  "dependencies": {
  },
  "devDependencies": {
  }
}
